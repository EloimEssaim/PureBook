/* pages/search/search.wxss */
.search{
  width: 80%;
  border-radius: 20rpx;
  background-color: white;
  padding: 10rpx;
  margin: 20rpx auto;
  font-size: 32rpx;
}

.title{
  font-size: 36rpx;
  text-align: center;
  margin: 30rpx 0;
  font-family: 'FZQingKeBenYueSongS-R-GB'
}

.book{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book_cover{
  box-shadow: 10rpx 10rpx 20rpx #d5d5d5;
  width:184rpx;
  height:271rpx;
}

.book_title{
  font-size: 32rpx;
  margin: 20rpx 0;
}

.author{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}


.author_img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.author_name{
  margin: 20rpx 0;
  font-size: 32rpx;
}

