i{
  width: 50rpx;
  text-align: center;
}

.bg{
  background-color: #f5f5f5;
  height: 1080rpx;
  width: 100%;
}

.user_portfolio{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
}

.username{
  margin: 20rpx 0px;
  font-size: 40rpx;
}

.user_icon{
   width:200rpx;
   height:200rpx;
}

.user_signature{
  font-size: 28rpx;
  text-align: center;
  width: 70%;
}

.func_container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  border-top: solid;
  border-width: 2rpx;
  border-color: gainsboro;
}

.bar{
  height: 100rpx;
  width: 100%;
  font-size: 34rpx;
  border-bottom: solid;
  border-width: 2rpx;
  border-color: gainsboro;
  display: flex;
  align-items: center;
  padding-left: 15%;
}

.block{
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  border-style: solid;
  border-width: 2rpx;
  border-color: gainsboro;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}