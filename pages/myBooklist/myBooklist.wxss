.headbar{
  height: 30%;
  padding: 0 50rpx;
  background: #f5f5f5;
  box-shadow: 0 1rpx 20rpx grey;
}

.title{
  font-family: 'FZQingKeBenYueSongS-R-GB';
  font-size: 60rpx;
}

.user_container{
  display: flex;
  flex-direction: row;
  padding: 50rpx 0;
}

.icon{
  width: 80rpx;
  height: 80rpx;
}

.username{
  font-family: 'FZQingKeBenYueSongS-R-GB';
  font-size: 36rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.booklist{
  padding-top: 5rpx;
}

.listitem{
  width: 100%;
  height: 150rpx;
  border-bottom: 2rpx solid #f1f1f1;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  
  align-items: center;
  
}

.listicon{
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid gray;
  border-radius: 5rpx;
}


.container_2{
  margin-left: 40rpx;
}

.listinfo{
  font-size: 30rpx;
  color: gray;
}