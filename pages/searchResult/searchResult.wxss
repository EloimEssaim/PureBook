/* pages/search/search.wxss */
.search{
  width: 80%;
  border-radius: 20rpx;
  background-color: white;
  padding: 10rpx;
  margin: 20rpx auto;
  font-size: 32rpx;
}

.result_list{
  margin-top: 40rpx;
  border-top: 1px solid #f1f1f1;
}

.result_item{
  border-bottom: 1px solid #f1f1f1;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.book_cover{
  width:122rpx;
  height:180rpx;
  margin-left: 10%;
  box-shadow: 5rpx 5rpx 0rpx #d5d5d5;
}

.book_info{
  margin-left: 20rpx;
}

.book_title{
  font-size: 40rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB'
}

.book_author{
  font-size: 34rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  line-height: 150%;
}

.tag_container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

.tag{
  border-radius: 10rpx;
  background-color: #b3c3da;
  font-size:30rpx;
  color: #f5f5f5;
  width: 120rpx;
  height: 60rpx;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
