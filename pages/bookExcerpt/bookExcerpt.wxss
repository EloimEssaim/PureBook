/* pages/bookExcerpt/bookExcerpt.wxss */
.book-info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top:20rpx;
}

.book-title{
  font-size:72rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;
  margin-left:40rpx;
}

.author-button-container{
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
}

.author-info{
  font-size:48rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;
  margin-left:40rpx;

}

.sentence{
  font-size: 30rpx;
  color:#7a7a7a;
  text-align: center;
  margin-top:20rpx;
}

.excerpt-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
}

.excerpt-box{
  background-color:#e9e9e9;
  font-size: 32rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  width: 650rpx;
  align-self: center;
  color: #444444;
  padding:10rpx;
  margin-bottom:20rpx;
}

.add-excerpt-btn{
  font-size:36rpx;
  display: flex;
  justify-content: center;
  align-self: center;
  align-items:center;
  border-radius: 5%;
  background-color: #f5f5f5;
  color: #555555;
  width: 230rpx;
  height: 70rpx;
  margin-top: 20rpx;
}
