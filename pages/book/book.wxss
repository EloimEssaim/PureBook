.swiper-box{
  display:flex;
  flex-direction:column;
  align-items:center;

}

.book-information-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-display-box{
  display: flex;
  flex-direction: column;
  align-items: center;

}

.book-display{
  display: flex;
  flex-direction: row;
  align-items: center;

}

.book-sentence{
  font-size: 26rpx;
  writing-mode: vertical-rl;
  height:300rpx;
  margin-right:30rpx;
  color: #b4b4b4;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  font-weight: lighter;
}

.book-cover{
  width: 192rpx;
  height:277rpx;
  box-shadow: 15rpx 15rpx 30rpx #aaaaaa;

}

.book-title{
  font-size:72rpx;
  margin-top:20rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';

}

.author-display-box{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-top:10rpx;
}

.author-avatar{
  border-radius: 50%;
  width: 76rpx;
  height: 76rpx;
}

.author-name{
  font-size: 48rpx;
  margin-left:20rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
}

.button-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:20rpx;
}

.fa-heart-o, .fa-heart{
  font-size: 50rpx;
}

.book-description-box{
  background-color: #e9e9e9;
  margin-top:20rpx;
  width: 630rpx;
  height:370rpx;
}

.book-description{
  font-size:24rpx;
}

.book-tag-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:20rpx;

}

.book-tag-container-title{
  font-size:24rpx;
  writing-mode: vertical-rl;
  color: #b4b4b4;
}

.book-tag{
  border-radius: 10%;
  background-color: #b3c3da;
  font-size:30rpx;
  color: #f5f5f5;
  width: 130rpx;
  height: 70rpx;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-tab{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
}

.swiper-tab-list{
  font-size:18rpx;
}

.on{
  color:#888888;
}

