/* pages/reviewDetail/reviewDetail.wxss */
.book-info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top:20rpx;
  margin-left:40rpx;
}

.book-title{
  font-size:72rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;
}

.author-button-container{
  display: flex;
  flex-direction: row;
  margin-top:30rpx;
}

.author-info{
  font-size:48rpx;
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;

}

.review-detail-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20rpx;
 
  
}

.review-detail-info{
  width: 610rpx;
  background-color: #e9e9e9;
  display: flex;
  flex-direction: column;
  padding:20rpx;

}

.review-title{
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;
  font-size: 48rpx;
}

.review-user-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:10rpx;

}

.review-user-avatar{
  border-radius: 50%;
  width: 45rpx;
  height: 45rpx;

}

.review-user-name{
  font-family: 'FZQingKeBenYueSongS-R-GB';
  color: #444444;
  font-size: 30rpx;
  margin-left:10rpx;

}

.review-detail-content{
  font-size:30rpx;
  color: #444444;
  width: 650rpx;
  margin-top:20rpx;
}